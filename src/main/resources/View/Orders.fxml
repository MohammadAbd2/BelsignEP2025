<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<FlowPane fx:controller="GUI.Controller.OrderPageController" alignment="CENTER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <VBox fx:id="ordersBody" spacing="20" stylesheets="@/Css/styles.css">

        <!-- Top: Filter Bar -->
        <BorderPane>
            <left>
                <TextField fx:id="searchField" promptText="Search..." />
            </left>
            <right>
                <HBox spacing="10">
                    <Label maxHeight="1.7976931348623157E308" style="-fx-font-weight: bold;" text="Status:" />
                    <Button fx:id="ordersNew" style="-fx-background-radius: 5;" text="New : 13" textFill="WHITE">
                        <font>
                            <Font name="Helvetica" size="11.0" />
                        </font>
                    </Button>
                    <Button fx:id="ordersApproved" style="-fx-background-radius: 5;" text="Approved : 21" textFill="WHITE">
                        <font>
                            <Font name="Helvetica" size="11.0" />
                        </font>
                    </Button>
                    <Button fx:id="ordersPending" style="-fx-background-radius: 5;" text="Pending : 7" textFill="WHITE">
                        <font>
                            <Font name="Helvetica" size="11.0" />
                        </font>
                    </Button>
                    <Button fx:id="ordersRejected" style="-fx-background-radius: 5;" text="Rejected : 4" textFill="WHITE">
                        <font>
                            <Font name="Helvetica" size="11.0" />
                        </font>
                    </Button>
                </HBox>
            </right>
        </BorderPane>

        <!-- Middle: Orders Grid -->
        <GridPane fx:id="ordersGrid" hgap="20.0" vgap="20">
            <columnConstraints>
                <ColumnConstraints percentWidth="20" />
                <ColumnConstraints percentWidth="20" />
                <ColumnConstraints percentWidth="20" />
                <ColumnConstraints percentWidth="20" />
                <ColumnConstraints percentWidth="20" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>

        </GridPane>

        <VBox spacing="10" alignment="TOP_CENTER">
            <!-- Container for static OrderCards -->
            <VBox fx:id="ordersList" spacing="10" alignment="TOP_CENTER">
                <!-- OrderCards will be added programmatically here -->
            </VBox>
        </VBox>

        <!-- Bottom: Page Navigation -->
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="prevButton" style="-fx-background-radius: 5;" styleClass="ordersPageNav" text="&lt;">
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding></Button>
            <Button fx:id="page1Button" style="-fx-background-radius: 5;" styleClass="ordersPageNav" text="1">
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding></Button>
            <Button fx:id="page2Button" style="-fx-background-radius: 5;" styleClass="ordersPageNav" text="2">
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding></Button>
            <Button fx:id="page3Button" style="-fx-background-radius: 5;" styleClass="ordersPageNav" text="3">
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding></Button>
            <Button fx:id="nextButton" style="-fx-background-radius: 5;" styleClass="ordersPageNav" text="&gt;">
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding></Button>
        </HBox>
        <padding>
          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>

    </VBox>
</FlowPane>
