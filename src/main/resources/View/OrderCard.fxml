<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>


<VBox fx:id="containerVBox" alignment="TOP_CENTER" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller.OrderCardController">
    <StackPane fx:id="imageStack">
        <ImageView fx:id="productImage" fitHeight="100.0" fitWidth="100.0" preserveRatio="true" />
        <ImageView fx:id="statusIcon" fitHeight="20.0" fitWidth="20.0" preserveRatio="true" StackPane.alignment="TOP_RIGHT" />
    </StackPane>
    <VBox>
        <Label fx:id="productName" wrapText="true" />
        <Label fx:id="productId" wrapText="true" />
    </VBox>
   <padding>
      <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
   </padding>
</VBox>
